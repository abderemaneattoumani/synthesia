{
  "version": 2,
  "builds": [
    {
      "src": "api/health.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    },
    {
      "src": "api/generate-report.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "api/health.py",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/generate-report",
      "dest": "api/generate-report.py",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "frontend/index.html"
    }
  ]
}